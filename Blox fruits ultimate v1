-- StarterPlayerScripts/MobileFakeExploit.client.lua

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UIS = game:GetService("UserInputService")

-- ================= GUI =================
local gui = Instance.new("ScreenGui")
gui.Name = "MobileExploitGUI"
gui.ResetOnSpawn = false
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.fromScale(0.8, 0.45)
frame.Position = UDim2.fromScale(0.1, 0.25)
frame.BackgroundColor3 = Color3.fromRGB(10,10,10)
frame.BorderSizePixel = 0
frame.Parent = gui

-- Rounded corners
local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 18)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.15, 0)
title.BackgroundTransparency = 1
title.Text = "INTERNAL INVENTORY INJECTOR"
title.Font = Enum.Font.Code
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(180, 0, 255)

-- Log
local log = Instance.new("TextLabel", frame)
log.Position = UDim2.fromScale(0.05, 0.18)
log.Size = UDim2.fromScale(0.9, 0.45)
log.BackgroundColor3 = Color3.fromRGB(15,15,15)
log.TextXAlignment = Left
log.TextYAlignment = Top
log.TextWrapped = true
log.Font = Enum.Font.Code
log.TextScaled = true
log.TextColor3 = Color3.fromRGB(0,255,120)
log.Text = "[READY]\n"
log.Parent = frame

local logCorner = Instance.new("UICorner", log)
logCorner.CornerRadius = UDim.new(0, 12)

local function addLog(t)
	log.Text ..= t .. "\n"
end

-- ================= CORE =================
local running = false
local loopDelay = 1 -- seconds

local function fakeStealOnce()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			addLog("[SCAN] " .. plr.Name)

			-- Backpack
			if plr:FindFirstChild("Backpack") then
				for _, tool in ipairs(plr.Backpack:GetChildren()) do
					if tool:IsA("Tool") then
						tool:Clone().Parent = LocalPlayer.Backpack
						addLog(" + " .. tool.Name)
					end
				end
			end

			-- Equipped
			if plr.Character then
				for _, tool in ipairs(plr.Character:GetChildren()) do
					if tool:IsA("Tool") then
						tool:Clone().Parent = LocalPlayer.Backpack
						addLog(" + " .. tool.Name .. " (equipped)")
					end
				end
			end
		end
	end
end

-- ================= BUTTON =================
local button = Instance.new("TextButton", frame)
button.Position = UDim2.fromScale(0.1, 0.7)
button.Size = UDim2.fromScale(0.8, 0.2)
button.Font = Enum.Font.Code
button.TextScaled = true
button.BackgroundColor3 = Color3.fromRGB(90, 0, 130)
button.TextColor3 = Color3.new(1,1,1)
button.Text = "AUTO‑STEAL: OFF"
button.Parent = frame

local btnCorner = Instance.new("UICorner", button)
btnCorner.CornerRadius = UDim.new(0, 14)

button.Activated:Connect(function()
	running = not running
	button.Text = running and "AUTO‑STEAL: ON" or "AUTO‑STEAL: OFF"
	addLog(running and "[LOOP ENABLED]" or "[LOOP DISABLED]")

	if running then
		task.spawn(function()
			while running do
				fakeStealOnce()
				task.wait(loopDelay)
			end
		end)
	end
end)
